
<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Vehiculos <small>Agregar</small>
        </h1>
      </div>
    </div>
    <!-- /.row -->




    <div class="row">

      <div class="col-lg-12">
        <div class="panel panel-default">

          <div class="panel-body">
            <%= form_for @car do |f|  %>

                <%  if @car.errors.any? %>
                    <div class="panel panel-danger">
                      <div class="panel-heading">
                        <%= pluralize(@car.errors.count, "Errores") %> tratando de guardar:
                      </div>
                      <p>
                      <ul>
                        <% @car.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                      </p>
                    </div>
                <% end %>


                <div class="row">
                  <div class="col-md-4">


                    <div class="form-group">
                      <%= f.label :name, 'Nombre' %>
                      <%= f.text_field :name, :class =>'form-control required'  %>
                    </div>


                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :code, 'Codigo' %>
                      <%= f.text_field :code, :class =>'form-control required'  %>
                    </div>
                  </div>

                </div>





                <div class="row">
                  <div class="col-md-12">
                    <p>
                      <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
                      <%= link_to 'Cancelar', cars_path,  :class=>'btn btn-danger' %>
                    </p>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->


<script src="http://jqueryvalidation.org/files/dist/jquery.validate.js"c></script>
<script src="http://jqueryvalidation.org/files/dist/additional-methods.js"></script>

