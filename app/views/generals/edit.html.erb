
<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Vehiculos <small>Agregar</small>
        </h1>
      </div>
    </div>
    <!-- /.row -->




    <div class="row">

      <div class="col-lg-12">
        <div class="panel panel-default">

          <div class="panel-body">
            <%= form_for @generals do |f|  %>

                <%  if @generals.errors.any? %>
                    <div class="panel panel-danger">
                      <div class="panel-heading">
                        <%= pluralize(@general.errors.count, "Errores") %> tratando de guardar:
                      </div>
                      <p>
                      <ul>
                        <% @generals.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                      </p>
                    </div>
                <% end %>


                <div class="row">
                  <div class="col-md-4">


                    <div class="form-group">
                      <%= f.label :value, 'Segundos' %>
                      <%= f.text_field :value, :class =>'form-control required'  %>
                    </div>


                  </div>
                </div>



                <%= javascript_include_tag 'jquery.validate' %>
                <script>


                    var ready;
                    ready = function() {
                        $("#general_value").validate();
                    };

                    $(document).ready(ready);
                    $(document).on('page:load', ready);


                </script>


                <div class="row">
                  <div class="col-md-12">
                    <p>
                      <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
                      <%= link_to 'Cancelar', generals_path,  :class=>'btn btn-danger' %>
                    </p>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->




