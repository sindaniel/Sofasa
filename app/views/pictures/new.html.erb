
<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Imagenes <small>Agregar</small>
        </h1>
      </div>
    </div>
    <!-- /.row -->

    <script>

        $('body').keyup(function(e){
            if(e.keyCode == 8){
                // user has pressed backspace
                $('#new_picture').submit();
            }
            if(e.keyCode == 32){
                // user has pressed space
                $('#new_picture').submit();
            }
        });


    </script>


    <div class="row">

      <div class="col-lg-12">
        <div class="panel panel-default">

          <div class="panel-body">
            <%= form_for [@car, @picture] do |f|  %>


                <%= f.hidden_field :position1, :value =>'1'  %>
                <%= f.hidden_field :position2, :value =>'2'  %>

                <%  if @picture.errors.any? %>
                    <div class="panel panel-danger">
                      <div class="panel-heading">
                        <%= pluralize(@picture.errors.count, "Errores") %> tratando de guardar:
                      </div>
                      <p>
                      <ul>
                        <% @picture.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                      </p>
                    </div>
                <% end %>


                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :time, 'Tiempo' %> / <small>Segundos</small>
                      <%= f.text_field :time, :class =>'form-control'  %>
                    </div>
                  </div>

                </div>



                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :picture1, 'Imagen 1' %>
                      <%= f.file_field :picture1, :class =>'form-control required'  %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :picture2, 'Imagen 2' %>
                      <%= f.file_field :picture2, :class =>'form-control required'  %>
                    </div>
                  </div>

                </div>




                <div class="row">
                  <div class="col-md-12">
                    <p>
                      <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
                      <%= link_to 'Cancelar', car_pictures_path(params[:car_id]),  :class=>'btn btn-danger' %>
                    </p>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->


<%= javascript_include_tag 'jquery.validate' %>



<script>


    var ready;
    ready = function() {

        $("#new_picture").validate();
    };

    $(document).ready(ready);
    $(document).on('page:load', ready);


</script>

